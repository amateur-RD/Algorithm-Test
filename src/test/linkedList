package test;

//节点类
class listNode {
	public int element;
	public listNode next;
	public listNode(int e) {
		this.element = e;
		this.next = null;
	}
			
}
public class linkedList {

	//定义头节点
	public listNode head = null;
	
	//添加节点
	public void addNode(int e) {
		listNode newNode = new listNode(e);
		if(head == null) {
			head = newNode;
			return;
		}
		listNode tmp = head;
		while(tmp.next != null) {
			tmp = tmp.next;
		}
		tmp.next = newNode;
	}
	
	//打印链表
	public void printList() {
		listNode tmp = head;
		//System.out.print("初始链表序列：");
		while(tmp != null) {
			System.out.print(tmp.element + " ");
			tmp = tmp.next;
		}
		System.out.println(" ");
	}
	
	//链表长度
	public int length() {
		listNode tmp = head;
		int length = 0;
		while(tmp != null) {
			length++;
			tmp = tmp.next;
		}
		return length;
		//System.out.println("链表长度：" + length);
	}
	
	public static void main(String[] args) {
		linkedList list = new linkedList();
		list.addNode(3);
		list.addNode(1);
		list.addNode(5);
		list.addNode(7);
		list.addNode(3);
		
		//打印链表
		System.out.print("初始链表序列：");
		list.printList();
		
		//链表长度
		System.out.println("链表长度：" + list.length());
		
	}
}
